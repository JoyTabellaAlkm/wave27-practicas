#Delete de una zapatilla
DELETE /zapatillas/_doc/9
#Update de una zapa
POST /zapatillas/_update/Um36m5IBgL1MPU_c0nlL
{
  "doc": {
    "shopping": [
      {"nombre": "Nuevocentro", "direccion": "Italia 3000", "barrio": "Centro"},
    {"nombre": "Villa cabrera shopping", "direccion": "Urquiza 3000", "barrio": "Villa cabrera"}
    ]
  }
}
GET /zapatillas/_search
{
  "query": {"term": {
    "_id": {
      "value": "Um36m5IBgL1MPU_c0nlL"
    }
  }}
}
GET /zapatillas/_search
{
  "sort": [
    {
      "descuento": {
        "order": "asc"
      }
    }
  ]
}
GET /zapatillas/_search
{
  "sort": [
    {
      "precio": {
        "order": "asc"
      }
    }
  ]
}
GET /zapatillas/_search
{
  "query": {"match_phrase": {
    "modelo": "Air force one"
    }
  }}
}
GET /zapatillas/_search
{
  "query": {"match_phrase": {
    "shopping.direccion": "Italia 3000"
    }
  }}
}
#Sorted por talle
GET /zapatillas/_search
{
  "query": {
    "match_all": {}
  },
  "sort": [
    {
      "talle": {
        "order": "desc"
      }
    }
  ]
}
#Get fuzzy
GET /zapatillas/_search
{
  "query": {
    "match": {
      "modelo": "Air force one"
    }
  }
}
#conseguir un talle
GET /zapatillas/_search
{
  "query": {
    "range": {
      "talle": {
        "gt": 40,
        "lte": 41
      }
    }
  }
}
GET /zapatillas/_search
{
  "query": {"fuzzy": {
    "modelo": "Air"
  }}
  
}