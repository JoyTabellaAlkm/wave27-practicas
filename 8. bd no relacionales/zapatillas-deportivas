# Se crea el indice "zapatillas"
PUT /zapatillas
#Guardar una zapatilla
POST /zapatillas/_doc
{
  "marca": "Nike",
  "modelo": "Air force one",
  "descripcion": "Las mejores zapatillas. Negras"
}
